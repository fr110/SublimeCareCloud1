                                    <StackPanel CanHorizontallyScroll="True" >
                                        <TextBlock  Text="{Binding VAddress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource cstmBlock}"/>
                                    </StackPanel>
